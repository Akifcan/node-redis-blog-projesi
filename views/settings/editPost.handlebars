{{#section 'styles'}}
<link rel="stylesheet" href="/styles/create.css">
    <link rel="stylesheet" href="/styles/settings.css">
{{/section}}

{{#section 'scripts'}}
<script src='/scripts/create.js'></script>
<script src="https://cdn.ckeditor.com/4.14.1/standard/ckeditor.js"></script>
{{/section }}

{{> _alert}}
<fieldset class="create">
    <legend>Yazı Güncelle <b>{{pageTitle}}</b></legend>
    <form method="POST" action="/settings/update-post" enctype="multipart/form-data">
        <img src="{{post.imagePath}}" class="preview" alt="{{post.title}}" />
        <div class="form-group">
            <label for="title">Başlık</label>
            <input type="text" class="width-100 mt-5" value="{{post.title}}" id="title"  maxlength="50"  name="title" minlength="3">
        </div>
        <div class="form-group">
            <label for="subtitle">Alt Başlık</label>
            <input type="text" class="width-100 mt-5" id="subtitle" value="{{post.subtitle}}"   name="subtitle" maxlength="20">
        </div>
        <div class="form-group">
            <label for="image">Resim</label>
            <input type="file" class="width-100 mt-5" id="image" name="image" accept="images/*">
        </div>
        <div class="form-group">
            <label for="content">İçerik</label>
            <textarea id="content" minlength="20" rows="20" class="width-100 mt-5" required name="content">{{post.content}}</textarea>
        </div>
        <div class="form-group">
            <label for="allow-comments">Yorumlara İzin Ver</label>
            {{#ifNot allowComments}}
                 <input type="checkbox" class="ml-5"   name="allowComments" id="allowComments">
                 {{else}}
                <input type="checkbox" class="ml-5" checked="checked"  name="allowComments" id="allowComments">
            {{/ifNot}}
        </div>
        {{#ifNot allowComments}}
            <div class="alert background-red mb-5">
                <p>Bu Gönderi İçin Yorumları Kapattınız</p>
            </div>
            {{else}}
            <div class="alert background-green mb-5">
                <p>Yorumlara İzin Verdiniz</p>
            </div>
        {{/ifNot}}
        <button class="background-blue" type="submit">Oluştur</button>
        <button class="background-orange">Taslağa Kaydet</button>
    </form>
</fieldset>