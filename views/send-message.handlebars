
{{> _alert}}

<div class="send-message">
    <h1>Mesaj Gönder</h1>
<p class="mt-5">Bana ulaşın!</p>

<form action="/message/send-message" method="POST" class="mt-5">
    <div class="form-group">
        <label for="name">Adın</label> 
        <input type="text" maxlength="50" id="name" minlength="3" name="name" class="width-100">
    </div>
    <div class="form-group">
        <label for="email">E-Posta Adresin</label>
        <input type="email" id="email" required maxlength="50" minlength="3" name="email" class="width-100">
    </div>
    <div class="form-group">
        <label for="topic">Konu</label>
        <input type="text" id="topic" required maxlength="50" minlength="3" name="topic" class="width-100">
    </div>
    <div class="form-group">
        <label for="message">Mesajın</label>
        <textarea name="message" id="message" class="width-100" cols="30" rows="10"></textarea>
    </div>
    <div class="form-group center">
        <button class="background-blue">Gönder</button>
    </div>
</form>
</div>

